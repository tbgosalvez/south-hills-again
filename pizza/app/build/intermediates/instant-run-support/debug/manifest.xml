            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tbg.pizza.RegisterActivity" />
        <activity android:name="com.tbg.pizza.MainActivity" />
        <activity android:name="com.tbg.pizza.OrderSummaryActivity" />

        <service
            android:name="com.android.tools.fd.runtime.InstantRunService"
            android:exported="true" />
    </application>

</manifest>